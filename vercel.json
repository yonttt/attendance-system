{
  "version": 2,
  "buildCommand": "",
  "outputDirectory": "public",
  "builds": [
    {
      "src": "api/*.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    { "src": "/api/employees", "dest": "/api/employees.py" },
    { "src": "/api/units", "dest": "/api/units.py" },
    { "src": "/api/positions", "dest": "/api/positions.py" },
    { "src": "/api/calculate", "dest": "/api/calculate.py" },
    { "src": "/api/deduction-table", "dest": "/api/deduction-table.py" }
  ]
}
